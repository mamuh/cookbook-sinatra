<div class="container">
  <a class="button" href="/new">Create new recipe</a>
  <ul class="recipe-list">
    <% @recipes.each_with_index do |recipe, index| %>
    <li class="list-item">
      <h4><%= recipe.name %></h4>
      <p><%= recipe.description %></p>
      <a href="/recipes/<%= index %>">Delete</a>
    </li>
    <% end %>
  </ul>
</div>
